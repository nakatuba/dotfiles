{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "keybinds": {
    "messages_half_page_up": "alt+v",
    "messages_half_page_down": "ctrl+v",
    "command_list": "",
    "input_paste": "none",
    "input_move_up": "up,ctrl+p",
    "input_move_down": "down,ctrl+n",
    "history_previous": "up,ctrl+p",
    "history_next": "down,ctrl+n"
  },
  "permission": {
    "external_directory": {
      "~/ghq/*": "allow"
    }
  }
}
