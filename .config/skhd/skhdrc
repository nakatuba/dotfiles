# focus window
ctrl + cmd - h : yabai -m window --focus west  || yabai -m display --focus west
ctrl + cmd - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + cmd - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + cmd - l : yabai -m window --focus east  || yabai -m display --focus east
ctrl + cmd - p : yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "pred"  else "stack.pred"  end') || \
                 yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "last"  else "stack.last"  end')
ctrl + cmd - n : yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "next"  else "stack.next"  end') || \
                 yabai -m window --focus $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "first" else "stack.first" end')

# swap window
shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

# move window
ctrl + cmd - left  : yabai -m window --warp west
ctrl + cmd - down  : yabai -m window --warp south
ctrl + cmd - up    : yabai -m window --warp north
ctrl + cmd - right : yabai -m window --warp east

# rotate tree
ctrl + cmd - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
ctrl + cmd - return : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
ctrl + cmd - space : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2

# toggle layout
ctrl + cmd - o : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')
