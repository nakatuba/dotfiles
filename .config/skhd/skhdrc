# focus window
ctrl + cmd - h : yabai -m window --focus west  || yabai -m display --focus west
ctrl + cmd - j : yabai -m window --focus south || yabai -m display --focus south
ctrl + cmd - k : yabai -m window --focus north || yabai -m display --focus north
ctrl + cmd - l : yabai -m window --focus east  || yabai -m display --focus east
ctrl + cmd - p : yabai -m window --focus prev  || yabai -m window  --focus last
ctrl + cmd - n : yabai -m window --focus next  || yabai -m window  --focus first

# swap window
shift + ctrl + cmd - h : yabai -m window --swap west
shift + ctrl + cmd - j : yabai -m window --swap south
shift + ctrl + cmd - k : yabai -m window --swap north
shift + ctrl + cmd - l : yabai -m window --swap east

# rotate tree
ctrl + cmd - r : yabai -m space --rotate 90

# toggle window fullscreen zoom
ctrl + cmd - o : yabai -m window --toggle zoom-fullscreen
